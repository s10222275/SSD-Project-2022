@page
@model SSD_Project.Pages.Facilities.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Facility</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Facility.ID" />
            <div class="form-group">
                <label asp-for="Facility.Name" class="control-label"></label>
                <input asp-for="Facility.Name" class="form-control" />
                <span asp-validation-for="Facility.Name" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Facility.Status" /> @Html.DisplayNameFor(model => model.Facility.Status)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="Facility.NumOfPeople" class="control-label"></label>
                <input asp-for="Facility.NumOfPeople" class="form-control" />
                <span asp-validation-for="Facility.NumOfPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
